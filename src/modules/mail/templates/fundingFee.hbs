<html lang="en">

<head>
    <link href="https://fonts.googleapis.com/css?family=Inter" rel="stylesheet">
    <style>
        p {
            margin: 0;
        }

        .im {
            color: #333333 !important;
        }
    </style>
</head>

<body
    style=" color: #333333; background-color: #f2f2f2; font-family: 'Inter'; display: flex; justify-content: center; align-content: center; font-size: 14px;">
    <div style="max-width: 854px; background-color: #fff; margin: 0 auto; margin-bottom: 30px">
        <div>
            <img src="{{bannerImage}}" width="100%">
        </div>
        <div style="padding: 35px 45px; line-height: 1.5">
            <div>
                <p style="margin-bottom:20px;">
                    {{key_funding_1}},
                </p>
                <div>
                    {{#if singular}}
                    <p style="margin-bottom:20px;">
                        {{key_funding_2}} {{fundingRate}}.
                    </p>
                    {{/if}}

                    {{#if many}}
                    <p style="margin-bottom:20px;">
                       {{key_funding_3}} {{fundingRate}}.
                    </p>
                    {{/if}}

                </div>
                <ol id="symbol">
                    {{#each symbols}}
                    <li>{{this.symbol}}: {{../key_funding_4}} {{this.fundingRate}} </li>
                    {{/each}}
                </ol>

                <p style="font-style: italic; text-decoration: underline;">
                    {{key_funding_5}} </p>
                <p style="margin-bottom:20px;">
                    {{key_funding_6}}
                </p>
                <p style="margin-bottom:20px;">
                    {{key_funding_7}} </p>
            </div>
            {{#if antiPhishingCode}}
                  <div style="display: flex; padding-top: 20px">
                    <div style="background-color: #00DDB3;padding: 2px 10px;border-bottom-left-radius: 5px;border-top-left-radius: 5px"><b>Anti-Phishing</b></div>
                    <div style="background-color: #dedede;padding: 2px 10px;border-top-right-radius: 5px;border-bottom-right-radius: 5px"><b>{{ antiPhishingCode }}</b></div>
                </div>
    {{/if}}
            <div>
                <span>-----------------------------------------------------------------</span>
                <p style="margin-bottom:20px;">
                    {{key_funding_8}} </p>
                <p style="margin-bottom:20px;">
                    {{exchangeLink}}</p>
                <p style="margin-bottom:20px;">
                    {{key_funding_9}} {{emailSupport}} / {{key_funding_10}}. {{phoneSupport}}</p>
                <p style="">
                    Monas Ltd. </p>
                <p style="">
                    {{key_funding_11}}</p>
            </div>


        </div>
        <div style="display:flex; justify-content: center; align-content: center;">
            <img src="{{footerImage}}"
                style="max-width:250px; margin: 0 auto; margin-bottom: 30px">
        </div>
    </div>


</body>

</html>`